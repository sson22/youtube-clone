extends base

block content 
    if errorMessage 
        span=errorMessage
    h4 Upload title of Video   
        form(method="POST" enctype="multipart/form-data")
            label(for="video") Video File
            input(type="file", accept="video/*", required, id="video", name="video")
            input(name="title", placeholder="Video Title", value="", required, maxlength=80)
            input(name="description", placeholder="Description", value="", required, minlength=20)
            input(name="hashtags", placeholder="Hashtag separated by comma", value="", required)
            input(value="Save",type="submit") 